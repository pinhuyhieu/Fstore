                    tinhThanhSelect.append('<option value="">Ch·ªçn T·ªânh/Th√†nh ph·ªë</option>');  // Th√™m l·ª±a ch·ªçn m·∫∑c ƒë·ªãnh

                    // Ki·ªÉm tra n·∫øu kh√¥ng c√≥ data ho·∫∑c data.data
                    if (data && data.data) {
